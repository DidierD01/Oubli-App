# Active le module rewrite
RewriteEngine On

# Définit les fichiers d'index par défaut
DirectoryIndex index.php index.html

# Interdit l'affichage de l'index des répertoires
Options -Indexes

# Autorise les règles .htaccess
AllowOverride All

# Redirige toutes les requêtes vers index.php
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ index.php [QSA,L]
